<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_menu">

    <LinearLayout
        android:id="@+id/frame_complete_goal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="50dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="100dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:id="@+id/ln1_complete_goal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/title_complete_goal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/complete_goal_title"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:gravity="center"
                android:padding="5dp"
                android:text="Congratulations, you've accomplished your goal"
                android:textColor="@color/white"
                android:textSize="20sp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/ln2_complete_goal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/title_complete_goal_body"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_task_goal_complete"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="20dp"
                android:text="Study"
                android:textAlignment="center"
                android:textColor="@color/button_color"
                android:textSize="34sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/complete_image"
                android:layout_width="165dp"
                android:layout_height="210dp"
                android:layout_below="@+id/text_task_goal_complete"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="70dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="70dp"
                app:srcCompat="@drawable/success" />

            <TextView
                android:id="@+id/text_task_complete_goal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/complete_image"
                android:layout_marginTop="30dp"
                android:text="Study PPL in 15m"
                android:textAlignment="center"
                android:textColor="@color/button_color"
                android:textSize="18sp" />


            <TextView
                android:id="@+id/btn_ok_complete_goal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text_task_complete_goal"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="100dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="100dp"
                android:background="@color/button_color"
                android:text="OK"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold" />

        </RelativeLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>